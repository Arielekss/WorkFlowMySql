@model WorkflowMVC.Models.WebTicketHeader

@{
    ViewBag.Title = "TicketCreator";
}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation" style="">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor02">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" @Html.ActionLink("Home", "Index", "Home")</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" @Html.ActionLink("Create Ticket", "TicketCreator", "Home")</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" @Html.ActionLink("Ticket List", "TicketList", "Home")</a>
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
<h2>TicketCreator</h2>


@using (Html.BeginForm("CreateTicket", "Home", FormMethod.Post))
{
    <form>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Header</label>
                    @Html.TextBoxFor(m => m.Header, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Ticket Content</label>
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control form-control-lg", rows = "12", style = "min-width: 100%" })
                </div>
            </div>
            <div class="col-md-12">
                <fieldset class="form-group">
                    <legend>Choose priority</legend>
                    <div class="form-check">
                        <label class="form-check-label">
                            @Html.RadioButtonFor(m => m.Priority, "Normal", new { @checked = true })
                            Normal
                        </label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            @Html.RadioButtonFor(m => m.Priority, "Critical")
                            Critical
                        </label>
                    </div>
                </fieldset>
            </div>

            <div>
                <button id="submitt" style="display:none" class="btn btn-primary">Send ticket</button>
            </div>
        </div>
    </form>
}
