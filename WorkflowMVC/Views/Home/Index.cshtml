@model WorkflowMVC.Models.WebUserModel

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("LogIn", "Home", FormMethod.Post))
{<style>
     .center {
         margin: auto;
         width: 30%;
         padding: 10px;
     }
 </style>
    <form>
        <div class="row"style="text-align: center">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">User name</label>
                    <div class="center">
                        @Html.TextBoxFor(m => m.UserName, new {@class = "form-control"})
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Password</label>
                    <div class="center">
                        @Html.PasswordFor(m => m.Pass, new {@class = "form-control"})
                    </div> 
                </div>
            </div>
            <div class="col-md-12">
                <button id="submitt" class="btn btn-primary">LogIn</button>
            </div>
        </div>
    </form>
}

@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{<div class="row">
     <br />
     <div class="col-md-12" align="center">
         <button id="submitt" class="btn btn-info" style="margin-top: 10px">Register</button>
     </div>
 </div>
    }
